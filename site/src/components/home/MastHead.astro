---
import { getConfig } from '@libs/config'
import { getVersionedDocsPath } from '@libs/path'
import Ads from '@components/Ads.astro'
import Code from '@components/shortcodes/Code.astro'
import ResponsiveImage from '@layouts/partials/ResponsiveImage.astro'
---

<div class="cxd-masthead mb-medium" id="content">
  <div class="container-2xlarge cxd-gutter">
    <div class="col-medium-8 mx-auto text-center">
      <a
        class="d-flex flex-column flex-large-row justify-content-center align-items-center mb-large text-dark lh-small text-decoration-none"
        href="https://www.herodevs.com/support/nes-chassis?utm_source=Chassis_site&utm_medium=Banner&utm_campaign=v3and4_eol"
        rel="noopener"
        target="_blank"
      >
        <span class="d-small-inline-flex align-items-center gap-2xsmall py-xsmall px-medium me-xsmall mb-xsmall mb-large-0 rounded-5 masthead-notice">
          Get Security Updates for Chassis 3 &amp; 4
          <svg class="bi" style="width: 20px; height: 20px; margin-block: -2px;" aria-hidden="true"
            ><use xlink:href="#arrow-right-short"></use></svg
          >
        </span>
      </a>
      <ResponsiveImage
        imgPath="/assets/brand/chassis-logo-shadow.png"
        alt="Chassis"
        width={200}
        height={165}
        classes="d-none d-small-block mx-auto mb-medium"
        lazyload={false}
      />
      <h1 class="mb-medium fw-semibold lh-1">Build fast, responsive sites with&nbsp;Chassis</h1>
      <p class="lead mb-large">
        Powerful, extensible, and feature-packed frontend toolkit. Build and customize with Sass, utilize prebuilt grid
        system and components, and bring projects to life with powerful JavaScript plugins.
      </p>
      <div class="d-flex flex-column flex-large-row align-items-medium-stretch justify-content-medium-center gap-medium mb-large">
        <div class="d-inline-block v-align-middle fs-5">
          <Code code={`npm i chassis@${getConfig().current_version}`} lang="sh" />
        </div>
        <a
          href={getVersionedDocsPath('getting-started/introduction')}
          class="button large cxd-button-large button-cxd-primary d-flex align-items-center justify-content-center fw-semibold"
        >
          <svg class="bi me-xsmall" aria-hidden="true"><use xlink:href="#book-half"></use></svg>
          Read the docs
        </a>
      </div>
      <p class="fg-subtle mb-0">
        Currently <strong>v{getConfig().current_version}</strong>
        <span class="px-2xsmall">&middot;</span>
        <a href={getVersionedDocsPath('getting-started/download')} class="link-secondary">Download</a>
        <span class="px-2xsmall">&middot;</span>
        <a href="/docs/versions/" class="link-secondary text-nowrap">All releases</a>
      </p>
      <Ads />
    </div>
  </div>
</div>
