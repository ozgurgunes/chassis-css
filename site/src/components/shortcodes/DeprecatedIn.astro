---
/*
 * Outputs badge to identify the version something was deprecated
 */

interface Props {
  version: string
}

const { version } = Astro.props
---

<small
  class="d-inline-flex mb-medium px-xsmall py-2xsmall fw-semibold text-warning-emphasis bg-warning-subtle border border-warning-subtle rounded-2"
>
  Deprecated in v{version}
</small>
