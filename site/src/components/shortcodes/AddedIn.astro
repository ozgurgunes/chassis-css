---
/*
 * Outputs badge to identify the first version something was added
 */

interface Props {
  version: string
}

const { version } = Astro.props
---

<small
  class="d-inline-flex mb-medium px-xsmall py-2xsmall fw-semibold text-success-emphasis bg-success-subtle border border-success-subtle rounded-2"
  >Added in v{version}</small
>
